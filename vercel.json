{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python@4.3.1",
      "config": {
        "maxDuration": 60
      }
    }
  ],
  "functions": {
    "api/**/*.py": {
      "excludeFiles": "{backend/venv/**,backend/app/index_data/**,backend/app/__pycache__/**,Public Policies/**,.git/**,node_modules/**,frontend/node_modules/**,**/*.pyc,**/__pycache__/**,*.pdf}"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
